<Window x:Class="StudentInfoSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentInfoSystem"
        mc:Ignorable="d"
        Title="LoginWindow" Height="350" Width="500">
    <Grid>
        <Label Width="100px" Height="30px" Content="Въведете име:" Margin="86,48,214,206"  VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        <TextBox Width="200px" Height="20px" Text="{Binding Path=FirstName}" Margin="93,69,107,195" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Width="200px" Height="30px" Content="Въведете фак:номер:" Margin="86,102,114,152" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox Width="200px" Height="20px" Text="{Binding Path=FacNumber}" Margin="93,122,107,142" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Width="50px" Height="20px" Content="Login" Margin="176,162,174,72" Click="Button_Click" VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
    </Grid>
</Window>
